<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.java.easybuy.entity.ProductEntity" table="easybuy_product" schema="easybuy">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="description" column="description"/>
        <property name="price" column="price"/>
        <property name="stock" column="stock"/>
        <property name="categoryLevel1Id" column="categoryLevel1Id"/>
        <property name="categoryLevel2Id" column="categoryLevel2Id"/>
        <property name="categoryLevel3Id" column="categoryLevel3Id"/>
        <property name="fileName" column="fileName"/>
        <property name="isDelete" column="isDelete"/>
    </class>
</hibernate-mapping>